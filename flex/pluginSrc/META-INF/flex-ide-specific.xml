<idea-plugin url="http://www.jetbrains.com/idea">
  <extensions defaultExtensionNs="com.intellij">
    <renameHandler implementation="com.intellij.javascript.flex.refactoring.FlexDirectoryAsPackageRenameHandler"/>
    <elementDescriptionProvider implementation="com.intellij.javascript.flex.refactoring.FlexPackageImpl$DescriptionProvider"/>

    <projectService serviceInterface="com.intellij.lang.javascript.flex.projectStructure.FlexProjectLevelCompilerOptionsHolder"
                    serviceImplementation="com.intellij.lang.javascript.flex.projectStructure.model.impl.FlexProjectLevelCompilerOptionsHolderImpl"/>
    <moduleService serviceInterface="com.intellij.lang.javascript.flex.projectStructure.model.FlexBuildConfigurationManager"
                   serviceImplementation="com.intellij.lang.javascript.flex.projectStructure.model.impl.FlexBuildConfigurationManagerImpl"/>
    <configuration.ModuleStructureExtension
        implementation="com.intellij.lang.javascript.flex.projectStructure.FlexIdeModuleStructureExtension"/>
    <configurationType implementation="com.intellij.lang.javascript.flex.run.FlexIdeRunConfigurationType"/>
    <library.type implementation="com.intellij.lang.javascript.flex.projectStructure.FlexSdkLibraryType"/>
    <orderEnumerationHandlerFactory
        implementation="com.intellij.lang.javascript.flex.projectStructure.FlexOrderEnumerationHandler$FactoryImpl"/>
    <moduleConfigurationEditorProvider implementation="com.intellij.lang.javascript.flex.projectStructure.FlexIdeModuleConfigurationEditorProvider"/>
    <projectService serviceInterface="com.intellij.openapi.roots.ui.configuration.ProjectSettingsService"
                    serviceImplementation="com.intellij.flexIde.FlexIdeProjectSettingsService"/>
    <wizardMode implementation="com.intellij.lang.javascript.flex.wizard.CreateFlexModuleFromScratchMode" order="first"/>
  </extensions>

  <actions>
    <!--
    <action id="ShowFlexIdeProjectStructure" class="com.intellij.lang.javascript.flex.projectStructure.ShowFlexIdeProjectStructureAction"
            text="Flex IDE Project Structure" icon="/com/intellij/lang/javascript/flex/actions/flex_actions_group.png">
      <add-to-group group-id="MainToolBar" anchor="last"/>
    </action>
    -->
    <group id="FlexIdeToolbarGroup">
      <action id="ChooseActiveBuildConfiguration"
              class="com.intellij.lang.javascript.flex.projectStructure.ui.ChooseActiveBuildConfigurationAction"/>

      <add-to-group group-id="MainToolBar" relative-to-action="HelpTopics" anchor="before"/>
    </group>
  </actions>
</idea-plugin>
