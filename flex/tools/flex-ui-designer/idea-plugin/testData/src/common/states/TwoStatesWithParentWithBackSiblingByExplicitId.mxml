<Application xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:mx="library://ns.adobe.com/flex/mx" xmlns="library://ns.adobe.com/flex/spark">
  <states>
    <State name="default"/>
    <State name="Register"/>
  </states>

  <Panel title="Login">
    <layout>
      <VerticalLayout/>
    </layout>

    <mx:Form>
      <mx:FormItem id="username" label="Username:">
        <TextInput/>
      </mx:FormItem>

      <mx:FormItem label="Password:" includeIn="Register">
        <TextInput/>
      </mx:FormItem>
    </mx:Form>
  </Panel>
</Application>