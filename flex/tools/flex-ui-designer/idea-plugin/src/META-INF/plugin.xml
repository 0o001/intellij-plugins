<idea-plugin version="2">
  <name>Flex UI Designer</name>
  <description>Provides editing support for Flex UI (currently, only view)</description>
  <version>0.5.5</version>
  <vendor logo="/general/ijLogo.png">JetBrains</vendor>
  <idea-version since-build="107.322"/>

  <resource-bundle>messages.FlexUIDesignerBundle</resource-bundle>

  <depends optional="false">com.intellij.flex</depends>
  <depends optional="false">com.intellij.properties</depends>

  <extensions defaultExtensionNs="com.intellij">
    <applicationService serviceInterface="com.intellij.flex.uiDesigner.FlexUIDesignerApplicationManager" serviceImplementation="com.intellij.flex.uiDesigner.FlexUIDesignerApplicationManager"/>
    <applicationService serviceInterface="com.intellij.flex.uiDesigner.SocketInputHandler" serviceImplementation="com.intellij.flex.uiDesigner.SocketInputHandlerImpl"/>
    <applicationService serviceInterface="com.intellij.flex.uiDesigner.io.StringRegistry" serviceImplementation="com.intellij.flex.uiDesigner.io.StringRegistry"/>
    <applicationService serviceInterface="com.intellij.flex.uiDesigner.DocumentFactoryManager" serviceImplementation="com.intellij.flex.uiDesigner.DocumentFactoryManager"/>
    <applicationService serviceInterface="com.intellij.flex.uiDesigner.BinaryFileManager" serviceImplementation="com.intellij.flex.uiDesigner.BinaryFileManager"/>
    <applicationService serviceInterface="com.intellij.flex.uiDesigner.DocumentProblemManager" serviceImplementation="com.intellij.flex.uiDesigner.DocumentProblemManager"/>
    <applicationService serviceInterface="com.intellij.flex.uiDesigner.libraries.LibraryManager" serviceImplementation="com.intellij.flex.uiDesigner.libraries.LibraryManager"/>
    <applicationService serviceInterface="com.intellij.flex.uiDesigner.Client" serviceImplementation="com.intellij.flex.uiDesigner.Client"/>

    <errorHandler implementation="com.intellij.diagnostic.ITNReporter"/>
  </extensions>
  
  <project-components>
    <component>
      <implementation-class>com.intellij.flex.uiDesigner.DocumentFactoryManager</implementation-class>
    </component>
  </project-components>

  <actions>
    <group id="FlexUIDesigner.MainToolbarActions">
      <separator/>
      <action id="FlexUIDesigner.RunDesignView" class="com.intellij.flex.uiDesigner.actions.RunDesignViewAction" icon="/actions/preview.png">
        <keyboard-shortcut first-keystroke="meta i" keymap="Mac OS X"/>
      </action>
      <action id="FlexUIDesigner.DebugDesignView" class="com.intellij.flex.uiDesigner.actions.DebugDesignViewAction" icon="/images/preview-debug.png">
        <keyboard-shortcut first-keystroke="meta shift i" keymap="Mac OS X"/>
      </action>
      <add-to-group anchor="before" group-id="MainToolBar" relative-to-action="HelpTopics"/>
    </group>

    <group id="FlexUIDesigner.ContextMenuActions">
      <reference ref="FlexUIDesigner.RunDesignView"/>
      <add-to-group anchor="last" group-id="RunContextPopupGroup"/>
    </group>
  </actions>
</idea-plugin>